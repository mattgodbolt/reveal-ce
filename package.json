{
  "name": "reveal-ce",
  "version": "1.0.0",
  "description": "Compiler Explorer plugin for reveal.js presentations",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "reveal.js",
    "compiler-explorer",
    "presentation",
    "c++",
    "plugin"
  ],
  "author": "Matt Godbolt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattgodbolt/reveal-ce.git"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "3.3.3",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write"
  }
}
